doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://www.w3schools.com/w3css/4/w3.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Raleway')
    link(rel='stylesheet', href='/css/upload.css')
    title Upload image
  body
    header
    .upload
      .glass
        h2  Upload
        .fileupload
          // Field to fill infos
          form(action='/upload', method='post', enctype='multipart/form-data')
            | Title:
            input(type='text', name='title')
            br
            |                     Category:
            input(type='text', name='category')
            br
            |                     Description:
            input(type='text', name='description')
            br
            |                     Location:
            input(list='locations', name='location')
            datalist#location
              option(value='Salmisaari')
              option(value='Kalasatama')
              option(value='Espoo')
              option(value='Konala')
              option(value='Pasila')
              option(value='Herttoniemi')
            |                     Image:
            input#imageUpload(type='file', name='image', accept='image/*')
            br
            button.btn(type='file', name='image', accept='image/*') Choose File
            input(type='submit')
        .bottom-input
          a(href='index')
          form(method='get', action='/home')
            input(type='submit', value='Cancel')

