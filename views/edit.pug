extends layout.pug
block content
    h1 Edit post
    form(action='edit?_method=PUT' method='post' enctype="application/x-www-form-urlencoded")
        | ID:
        input(type='text', name='_id', placeholder='5c9ddeb1...')
        br
        | Title:
        input(type='text', name='name')
        br
        |   Description:
        input(type='text', name='description')
        br
        |   Category:
        input(type='text', name='gategory', placeholder='Kiipeilyareena / Boulderkeskus')
        br
        |   Location:
        input(type='text', name='location', placeholder='Salmisaari, Espoo...')
        br
        input(type='submit')